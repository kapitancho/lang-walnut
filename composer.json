{
    "name": "walnut/lang",
    "description": "Walnut is a modern functional programming language that combines powerful type system features with practical programming constructs. Designed for building robust applications, Walnut emphasizes type safety, immutability, and clear error handling while maintaining excellent developer ergonomics.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Walnut\\Lang\\Test\\": "tests/Walnut/Lang",
            "Walnut\\Lang\\": "src"
        }
    },
    "authors": [
        {
            "name": "Marian Kostadinov",
            "email": "manchokapitancho@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.5",
        "kapitancho/walex": "^0.0.1",
        "ext-mbstring": "*",
		"ext-bcmath": "*"
	},
    "require-dev": {
        "phpunit/phpunit": "^11.0.5",
        "spiral/roadrunner": "^2025.1",
        "spiral/roadrunner-worker": "^3.6",
        "nyholm/psr7": "^1.8",
        "spiral/roadrunner-http": "^3.6",
        "phpstan/phpstan": ">= 2.1.32",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "bin": [
        "bin/walnut-cli",
        "bin/walnut-init-project",
        "bin/walnut-test",
        "bin/walnut-analyse",
        "bin/walnut-http"
    ]
}
